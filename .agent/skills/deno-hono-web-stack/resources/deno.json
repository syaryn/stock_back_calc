{
  "tasks": {
    "start": "deno run -A src/main.tsx",
    "dev": "deno run -A --watch src/main.tsx",
    "test": "deno test",
    "hook": "deno run --allow-read --allow-run --allow-write jsr:@evilmartians/lefthook install"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "jsr:@hono/hono/jsx"
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/"
    ],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  }
}
