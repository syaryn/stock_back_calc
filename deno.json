{
  "tasks": {
    "dev": "deno serve -A --watch main.tsx",
    "check": "deno task lint && deno task fmt && deno task test",
    "test": "deno test --allow-read --allow-env --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@picocss/pico": "npm:@picocss/pico@^2.1.1",
    "alpinejs": "npm:alpinejs@^3.15.8",
    "hono": "jsr:@hono/hono@^4.0.0",
    "htmx.org": "npm:htmx.org@^2.0.8",
    "std/": "jsr:@std/",
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@1"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
